<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/details_fragment">

    <!-- Keep imageview layout width:height at 16:9 aspect ratio -->
    <ImageView
        android:id="@+id/search_results_card_imageview"
        android:layout_width="0dp"
        android:layout_height="232dp"
        android:scaleType="centerInside"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/no_poster_found_landscape"
        tools:src="@drawable/no_poster_found_landscape" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_results_card_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor = "?android:textColorPrimary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Movie Title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/details_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor = "?android:textColorPrimary"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/details_score"
                        tools:text="Released: 1996" />

                    <TextView
                        android:id="@+id/details_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor = "?android:textColorPrimary"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintStart_toEndOf="@+id/details_release_date"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="User Rating: 69.420%" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/details_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor = "?android:textColorPrimary"
                    android:maxLines="6"
                    android:ellipsize="end"
                    tools:text="@tools:sample/lorem/random"/>

                <TextView
                    android:id="@+id/watch_providers_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="26dp"
                    android:textColor = "?android:textColorPrimary"
                    android:textStyle="bold"
                    tools:text="Watch Providers:"/>

                <TextView
                    android:id="@+id/watch_providers_stream_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:textSize="22dp"
                    android:textColor = "?android:textColorPrimary"
                    tools:text="Stream"/>

                <include
                    android:id="@+id/streaming_providers_stream_recylerview"
                    layout="@layout/watch_providers_recylerview" />

                <TextView
                    android:id="@+id/watch_providers_buy_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:textSize="22dp"
                    android:textColor = "?android:textColorPrimary"
                    tools:text="Buy"/>

                <include
                    android:id="@+id/streaming_providers_buy_recylerview"
                    layout="@layout/watch_providers_recylerview" />

                <TextView
                    android:id="@+id/watch_providers_rent_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:textSize="22dp"
                    android:textColor = "?android:textColorPrimary"
                    tools:text="Buy"/>

                <include
                    android:id="@+id/streaming_providers_rent_recylerview"
                    layout="@layout/watch_providers_recylerview" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
