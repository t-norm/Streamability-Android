<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/details_fragment">

    <!-- Keep imageview layout width:height at 16:9 aspect ratio -->
    <ImageView
        android:id="@+id/search_results_card_imageview"
        android:layout_width="0dp"
        android:layout_height="232dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/no_poster_found_landscape"
        tools:src="@drawable/no_poster_found_landscape" />

    <TextView
        android:id="@+id/details_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor = "?android:textColorPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_results_card_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Movie Title" />

    <TextView
        android:id="@+id/details_release_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor = "?android:textColorPrimary"
        android:textStyle="italic"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1996" />

    <TextView
        android:id="@+id/search_results_card_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor = "?android:textColorPrimary"
        android:maxLines="6"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_release_date"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@tools:sample/lorem/random"/>


</androidx.constraintlayout.widget.ConstraintLayout>